{% extends 'base.html.twig' %}

{% block title %}Leaderboard{% endblock %}

{% block body %}
<div class="dnd-background">
    <div class="container text-center my-5" style="max-width: 800px;">
        <h1 class="mb-4" style="font-family: 'Cinzel', serif; text-shadow: 2px 2px #8b0000;">Leaderboard</h1>

        <div class="table-responsive">
            <table class="table table-hover table-bordered leaderboard-table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Pseudo</th>
                        <th scope="col">Race</th>
                        <th scope="col">Force</th>
                        <th scope="col">Intelligence</th>
                        <th scope="col">Sagesse</th>
                        <th scope="col">Agilité</th>
                        <th scope="col">Points de vie</th>
                    </tr>
                </thead>
                <tbody>
                    {% for player in players %}
                        {% if player.SelectedRace is not null %}
                            <tr class="table-secondary">
                                <td>{{ player.pseudo }}</td>
                                <td>{{ player.SelectedRace.name }}</td>
                                <td>{{ player.SelectedRace.strength }}</td>
                                <td>{{ player.SelectedRace.intelligence }}</td>
                                <td>{{ player.SelectedRace.wisdom }}</td>
                                <td>{{ player.SelectedRace.agility }}</td>
                                <td>{{ player.SelectedRace.hp }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">Aucune statistique pour {{ player.pseudo }}</td>
                            </tr>
                        {% endif %}
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Aucun joueur trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('app_player_new') }}" class="create-btn btn btn-primary btn-lg">Créer un nouveau personnage</a>
    </div>
</div>

<style>
    .dnd-background {
        background-image: url('{{ asset('assets/img/background-tavern.png') }}');
        background-size: cover;
        background-position: center;
        min-height: 100vh;
        padding: 20px;
        color: #f5deb3;
        font-family: 'Cinzel', serif;
    }

    .table {
        background-color: #3e2916;
        border: 2px solid #8b4513;
        color: #f5deb3;
        font-family: 'Cinzel', serif;
    }

    .leaderboard-table th, .leaderboard-table td {
        padding: 12px;
        text-align: center;
    }

    .leaderboard-table th {
        background-color: #5c3a17;
        color: #fff;
        text-shadow: 1px 1px 2px #8b0000;
    }

    .table-hover tbody tr:hover {
        background-color: #8b0000;
        color: #fff;
        cursor: pointer;
    }

    .create-btn {
        margin-top: 20px;
        font-size: 18px;
        padding: 12px 30px;
        background-color: #006400;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }

    .create-btn:hover {
        background-color: #228b22;
    }
</style>
{% endblock %}