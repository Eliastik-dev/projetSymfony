{% extends 'base.html.twig' %}

{% block title %}Race{% endblock %}

{% block body %}
    <h1>Race Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ race.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ race.Name }}</td>
            </tr>
            <tr>
                <th>Strength</th>
                <td>{{ race.strength }}</td>
            </tr>
            <tr>
                <th>Intelligence</th>
                <td>{{ race.intelligence }}</td>
            </tr>
            <tr>
                <th>Wisdom</th>
                <td>{{ race.wisdom }}</td>
            </tr>
            <tr>
                <th>Agility</th>
                <td>{{ race.agility }}</td>
            </tr>
            <tr>
                <th>Hp</th>
                <td>{{ race.hp }}</td>
            </tr>
        </tbody>
    </table>

    {% if race.whatStory %}
        <h2>Associated Story</h2>
        <p>{{ race.whatStory.storyDescription }}</p>

        <h3>Episodes in Story</h3>
        <ul>
            {% for episode in race.whatStory.whatEpisode %}
                <li>
                    <a href="{{ path('app_episode_show', {'id': episode.id}) }}">
                        Episode {{ episode.id }}: {{ episode.episodeDescription }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No associated story for this race.</p>
    {% endif %}

    <a href="{{ path('app_race_index') }}">Back to list</a>
    <a href="{{ path('app_race_edit', {'id': race.id}) }}">Edit</a>

    {{ include('race/_delete_form.html.twig') }}
{% endblock %}
